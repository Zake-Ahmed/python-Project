[Unit]
Description=Flask app service
[Service]
User=jenkins
WorkingDirectory=/home/jenkins/.jenkins/workspace/python-Project
Environment=DATABASE_URI=sqlite:///data.db
ExecStart=/bin/sh  \
    -c 'python3 -m venv venv &&\
    . ./venv/bin/activate &&\
    pip3 install -r requirements.txt &&\
    python3 create.py &&\
    python3 app.py'
[Install]
WantedBy=multi-user.target